{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/common/core/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/common/core",
        "main": "libs/common/core/src/index.ts",
        "tsConfig": "libs/common/core/tsconfig.lib.json",
        "assets": ["libs/common/core/*.md"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/common/core/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/common/core"],
      "options": {
        "jestConfig": "libs/common/core/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["scope:common", "type:utils"]
}
